using System;
using System.Runtime.InteropServices;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            int lengthOfArray = 0;
            bool isInt;

            Console.Write("Введите длину массива: ");
            isInt = int.TryParse(Console.ReadLine(), out lengthOfArray);

            while (!isInt || lengthOfArray <= 0)
            {
                Console.Write("\nВведите корректное число ");
                isInt = int.TryParse(Console.ReadLine(), out lengthOfArray);
            }

            int[] array = new int[lengthOfArray];
            Random random = new Random();

            Console.WriteLine("\nВаш массив: ");

            for (int i = 0; i < lengthOfArray; i++)
            {
                array[i] = random.Next(10, 100);
                Console.Write($"{array[i]} ");
            }

            Shuffle(ref array, random);
            Console.WriteLine("\nМассив после перемешки");

            for (int i = 0; i < lengthOfArray; i++)
            {
                Console.Write($"{array[i]} ");
            }

            Console.ReadKey();
        }

        static void Shuffle(ref int[] array, Random random)
        {
            int[] arrayToShuffleIndex = new int[array.Length];
            int[] arrayToShuffle = new int[array.Length];

            for (int i = 0; i <array.Length; i++)
            {
                arrayToShuffleIndex[i] = -1;
            }

            for (int i = 0; i < array.Length; i++)
            {
                bool isOne = false;

                arrayToShuffleIndex[i] = random.Next(array.Length);

                if (i == 0)
                {
                    isOne = true;
                }

                while (!isOne)
                {
                    int countOfIndex = 0;

                    for (int j = 0; j < array.Length; j++)
                    {
                        if (arrayToShuffleIndex[i] == arrayToShuffleIndex[j])
                        {
                            countOfIndex += 1;
                        }
                    }

                    if (countOfIndex == 1)
                    {
                        isOne = true;
                    }
                    else
                    {
                        arrayToShuffleIndex[i] = random.Next(array.Length);
                    }
                }

                arrayToShuffle[i] = array[arrayToShuffleIndex[i]];
            }

            array = arrayToShuffle;
        }
    }
}
